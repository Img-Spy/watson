{
  "name": "watson",
  "version": "0.2.0",
  "main": "main.js",
  "license": "MIT",
  "author": {
    "name": "Fernando Román García",
    "email": "fernando.roman@upc.edu"
  },
  "repository": "https://github.com/Img-Spy/watson",
  "description": "A digital forensics application",
  "build": {
    "productName": "Watson",
    "appId": "org.imgspy.watson",
    "asar": true,
    "asarUnpack": [
      "./assets/plugins",
      "./assets/js/img-spy.js"
    ],
    "files": [
      "./assets",
      "./fonts",
      "./main.js",
      "./imgspy.json"
    ],
    "extraFiles": [
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development"
    },
    "directories": {
      "output": "../release"
    },
    "publish": {
      "provider": "github",
      "owner": "watson",
      "private": false
    }
  },
  "dependencies": {
    "electron-devtools-installer": "^2.2.4",
    "chokidar": "^3.0.0",
    "electron-store": "^3.2.0",
    "element-resize-detector": "^1.1.15"
  },
  "devDependencies": {
    "electron": "^4.2.9"
  }
}
